<%= form_with(model: @task, url: [@project, @task], local: true) do |f|  %>
    <%= render 'shared/error_messages', object: f.object %>

    <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: "form-control w-50", value: form_field_exists?(@task.title) %>
    </div>

    <div class="form-group">
        <%= f.label :description %>
        <%= f.text_area :description, class: "form-control w-50", value: form_field_exists?(@task.description) %>
    </div>

    <%= f.label :stage %>
    <div class="form-group">
        <%= f.select :stage, options_for_select(Task::STAGES), {}, { class: "custom-select w-25", value: form_field_exists?(@task.stage) } %>
    </div>

    <%= f.submit yield(:button_text), class: 'mt-3 btn btn-primary' %>
<% end %>
