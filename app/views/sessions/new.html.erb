<div class="container">
    <div class="col-md-6 col-lg-4">
        <h1>Log In</h1>

        <%= form_with(url: new_session_path, scope: :session, local: true) do |f| %>
            <%= f.label :email %>
            <%= f.email_field :email, class: "form-control" %>

            <%= f.label :password %>
            <%= f.password_field :password, class: "form-control" %>

            <%= f.submit "Log In", class: "btn btn-primary mt-3 mb-3" %>
        <% end %>

        <p>New user? Click <%= link_to 'here', signup_path %> to sign up now!</p>
    </div>
</div>
