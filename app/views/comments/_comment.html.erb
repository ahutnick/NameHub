<% comments.each do |comment| %>
    <%= form_with(model: @comment, url: [@task, @comment], local: true) do |f|  %>
        <% if comment.valid? %>
            <li class="list-group-item comment" id="comment-<%= comment.id %>">
                <h6><%= comment.content %></h6>
                <small>
                    Created At: <%= date_format(comment.created_at) %> 
                </small>
                <small class="float-right">
                    <%= link_to 'Delete', [comment.task,comment], method: :delete, 
                        data: { confirm: 'Are you sure you want to delete this comment?' } %>
                </small>
            </li>
        <% end %>
    <% end %>
<% end %>
