<%= form_with(model: @project, local: true) do |f|  %>
    <%= render 'shared/error_messages', object: f.object %>

    <div class="form-group">
        <%= f.label :title  %>
        <%= f.text_field :title, class: 'form-control w-50', value: form_field_exists?(@project.title) %>
    </div>

    <div class="form-group">
        <%= f.label :description  %>
        <%= f.text_area :description, class: 'form-control w-50', value: form_field_exists?(@project.description) %>
    </div>

    <%= f.submit yield(:button_text), class: 'mt-3 btn btn-primary' %>
<% end %>
    