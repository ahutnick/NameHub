<%= javascript_pack_tag 'projects/sort_cards' %>

<div class="col-sm-8">
    <h1 class="title" id=<%= @project.id %>><%= @project.title %></h1>
    <p><%= @project.description %></p>
    <h6>Progress: <%= progress %></h6>
</div>
<div class="row">
    <div class="col-sm-8 ml-3 mt-3">
        <%= link_to "Edit Header", edit_project_path(@project), class: "btn btn-primary" %>
        <%= link_to "New Task", new_project_task_path(@project), class: "btn btn-success" %>
    </div>
</div>
<%= render partial: 'tasks/task', collection: @project.tasks %>

<div class="col-sm-11 hub mt-3" id="dash">
    <div class="row">
        <div class="col" id="idea">
            <h4>Ideas</h4>
        </div>
        <div class="col" id="ready">
            <h4>Ready</h4>
        </div>
        <div class="col" id="underway">
            <h4>Underway</h4>
        </div>
        <div class="col" id="review">
            <h4>Review</h4>
        </div>
        <div class="col" id="completed">
            <h4>Completed!</h4>
        </div>
    </div>
</div>
